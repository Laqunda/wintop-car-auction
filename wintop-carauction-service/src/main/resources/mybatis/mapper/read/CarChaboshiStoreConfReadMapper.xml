<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wintop.ms.carauction.mapper.read.CarChaboshiStoreConfReadDao">

    <resultMap type="com.wintop.ms.carauction.entity.CarChaboshiStoreConf" id="CarChaboshiStoreConfResult">

        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="storeId != null ">and store_id = #{storeId}</if>
            <if test="ifOpen != null  and ifOpen != '' ">and if_open = #{ifOpen}</if>
            <if test="balance != null ">and balance = #{balance}</if>

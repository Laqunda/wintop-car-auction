<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wintop.ms.carauction.mapper.read.CarChaboshiStoreAccountReadDao">
    
    <resultMap type="com.wintop.ms.carauction.entity.CarChaboshiStoreAccount" id="CarChaboshiStoreAccountResult">
        <result property="id"    column="id"    />
        <result property="storeId"    column="store_id"    />
        <result property="type"    column="type"    />
        <result property="balance"    column="balance"    />
        <result property="payment"    column="payment"    />
        <result property="serviceType"    column="service_type"    />
        <result property="createTime"    column="create_time"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
    </resultMap>
	
	<sql id="selectCarChaboshiStoreAccountVo">
        select id,user_id,user_name, store_id, type, balance, payment, service_type, create_time from car_chaboshi_store_account
    </sql>
	
    <select id="selectCount" parameterType="com.wintop.ms.carauction.entity.CarChaboshiStoreAccount" resultType="java.lang.Integer">
        select count(*) from car_chaboshi_store_account
        <where>  
            <if test="id != null "> and id = #{id}</if>
             <if test="storeId != null "> and store_id = #{storeId}</if>
             <if test="type != null  and type != '' "> and type = #{type}</if>
             <if test="balance != null "> and balance = #{balance}</if>
             <if test="payment != null "> and payment = #{payment}</if>
             <if test="serviceType != null  and serviceType != '' "> and service_type = #{serviceType}</if>
             <if test="createTime != null "> and create_time = #{createTime}</if>
             <if test="userId != null "> and user_id = #{userId}</if>
             <if test="userName != null "> and user_name = #{userName}</if>
         </where>
    </select>
     <select id="selectCarChaboshiStoreAccountList" parameterType="com.wintop.ms.carauction.entity.CarChaboshiStoreAccount" resultMap="CarChaboshiStoreAccountResult">
        <include refid="selectCarChaboshiStoreAccountVo"/>
        <where>
            <if test="id != null "> and id = #{id}</if>
             <if test="storeId != null "> and store_id = #{storeId}</if>
             <if test="type != null  and type != '' "> and type = #{type}</if>
             <if test="balance != null "> and balance = #{balance}</if>
             <if test="payment != null "> and payment = #{payment}</if>
             <if test="serviceType != null  and serviceType != '' "> and service_type = #{serviceType}</if>
             <if test="createTime != null "> and create_time = #{createTime}</if>
             <if test="userId != null "> and user_id = #{userId}</if>
             <if test="userName != null "> and user_name = #{userName}</if>
         </where>

         order by create_time desc
    </select>

    <select id="selectCarChaboshiStoreAccountById" parameterType="Long" resultMap="CarChaboshiStoreAccountResult">
        <include refid="selectCarChaboshiStoreAccountVo"/>
        where id = #{id}
    </select>
</mapper>
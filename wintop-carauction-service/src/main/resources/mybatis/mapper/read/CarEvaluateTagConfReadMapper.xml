<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wintop.ms.carauction.mapper.read.ICarEvaluateTagConfReadDao">
  <resultMap id="BaseResultMap" type="com.wintop.ms.carauction.entity.CarEvaluateTagConf">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="p_id" jdbcType="BIGINT" property="pId" />
    <result column="type" jdbcType="VARCHAR" property="type" />
    <result column="star" jdbcType="DECIMAL" property="star" />
  </resultMap>
  <sql id="Base_Column_List">
    id, title, p_id, type, star
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from car_evaluate_tag_conf
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="queryCarEvaluateTagConfList" parameterType="java.util.Map" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from car_evaluate_tag_conf
    <where>
      <if test="type != null and type != ''">
        and `type` = #{type}
      </if>
      <if test="pId != null and pId != ''">
        and p_id = #{pId}
      </if>
    </where>
  </select>
  <select id="selectChildrenTagConfList" parameterType="java.util.Map" resultType="java.lang.String">
    select
        group_concat(concat_ws('_',`type`,star,p_id,id,title))
    from car_evaluate_tag_conf
    where p_id != -1
    <if test="type != null and type != ''">
      and `type` = #{type}
    </if>
    <if test="pId != null and pId != ''">
      and p_id = #{pId}
    </if>
    <if test="star != null and star != ''">
      and star = #{star}
    </if>
    group by type,p_id,star
  </select>
</mapper>
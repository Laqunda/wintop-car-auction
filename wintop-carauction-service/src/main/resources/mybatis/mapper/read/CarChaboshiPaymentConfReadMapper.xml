<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wintop.ms.carauction.mapper.read.CarChaboshiPaymentConfReadDao">
    
    <resultMap type="com.wintop.ms.carauction.entity.CarChaboshiPaymentConf" id="CarChaboshiPaymentConfResult">
        <result property="id"    column="id"    />
        <result property="payment"    column="payment"    />
        <result property="paymentComposite"    column="payment_composite"    />
    </resultMap>
	
	<sql id="selectCarChaboshiPaymentConfVo">
        select id, payment, payment_composite from car_chaboshi_payment_conf
    </sql>
	
    <select id="selectCarChaboshiPaymentConfList" parameterType="com.wintop.ms.carauction.entity.CarChaboshiPaymentConf" resultMap="CarChaboshiPaymentConfResult">
        <include refid="selectCarChaboshiPaymentConfVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
             <if test="payment != null "> and payment = #{payment}</if>
             <if test="paymentComposite != null "> and payment_composite = #{paymentComposite}</if>
         </where>
    </select>

    <select id="selectCount" parameterType="com.wintop.ms.carauction.entity.CarChaboshiPaymentConf" resultType="java.lang.Integer">
        select count(*) from car_chaboshi_payment_conf
        <where>
            <if test="id != null "> and id = #{id}</if>
             <if test="payment != null "> and payment = #{payment}</if>
             <if test="paymentComposite != null "> and payment_composite = #{paymentComposite}</if>
         </where>
    </select>
    
    <select id="selectCarChaboshiPaymentConfById" parameterType="Long" resultMap="CarChaboshiPaymentConfResult">
        <include refid="selectCarChaboshiPaymentConfVo"/>
        where id = #{id}
    </select>
</mapper>